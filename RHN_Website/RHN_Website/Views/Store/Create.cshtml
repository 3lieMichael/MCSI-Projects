@model IEnumerable<RHN_Website.Models.Product>

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Store</h4>
        <hr>
        <div class="form-group">
            <label class="control-label col-md-2" for="ProductId">ProductId</label>
            <div class="col-md-10">
                <select class="form-control" id="ProductId" name="ProductId">
                    @foreach (var item in Model)
                    {
                        <option value="@item.Id">@item.Name</option>
                    }
                </select>
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2" for="QuantityInStore">QuantityInStore</label>
            <div class="col-md-10">
                <input class="form-control text-box single-line" 
                       id="QuantityInStore" 
                       name="QuantityInStore" 
                       type="number" 
                       value="">
                <span class="field-validation-valid text-danger" data-valmsg-for="QuantityInStore" data-valmsg-replace="true"></span>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default">
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
